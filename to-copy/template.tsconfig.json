{
  "extends": "./node_modules/@dtw/format/lib/tsconfig.dtw.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "~/*": [
        "../*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.cjs",
    "src/**/*.js",
    "src/**/*.mjs",
    "test/**/*.ts"
  ]
}
